<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#314252"
    tools:context=".activity_inserimento">

    <TextView
        android:id="@+id/lblTitoloAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="111dp"
        android:fontFamily="@font/bangers"
        android:text="Aggiunta Riparazione "
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblAutoAddRip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="70dp"
        android:text="Auto:"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitoloAdd" />

    <Spinner
        android:id="@+id/cboAutoAddRip"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/lblAutoAddRip"
        app:layout_constraintTop_toBottomOf="@+id/lblTitoloAdd" />

    <TextView
        android:id="@+id/lblDataAddRip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:text="Data:"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAutoAddRip" />

    <TextView
        android:id="@+id/lblCausaAddRip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:text="Causa:"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDataAddRip" />

    <TextView
        android:id="@+id/lblCostoAddRip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:text="Costo:"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCausaAddRip" />

    <EditText
        android:id="@+id/txtDataAddRip"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="55dp"
        android:ems="10"
        android:inputType="date|none"
        android:textAlignment="viewStart"
        android:textColor="#DCDCDC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cboAutoAddRip" />

    <EditText
        android:id="@+id/txtCausaAddRip"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="55dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="#DCDCDC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDataAddRip" />

    <EditText
        android:id="@+id/txtCostoAddRip"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="55dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="viewStart"
        android:textColor="#DCDCDC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCausaAddRip" />

    <TextView
        android:id="@+id/lblPagatoAddRip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:text="Pagato:"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblCostoAddRip" />

    <CheckBox
        android:id="@+id/chkPagatoAddRip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="37dp"
        android:textColor="#DCDCDC"
        app:layout_constraintStart_toEndOf="@+id/lblPagatoAddRip"
        app:layout_constraintTop_toBottomOf="@+id/txtCostoAddRip" />

    <Button
        android:id="@+id/btnAddRip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="162dp"
        android:background="#2e8b57"
        android:text="Aggiungi"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#DCDCDC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkPagatoAddRip" />

    <TextView
        android:id="@+id/lblVisErroreAddRip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="144dp"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitoloAdd" />

</androidx.constraintlayout.widget.ConstraintLayout>